<h1>投稿詳細ページ</h1>
<h3><%= @post.user.name %></h3>
<h3><%= @post.content %></h3>

<div class="comments-box">
  <%= form_with model: [@post,@comment], local: true, method: :post do |f| %>
    <%= f.text_field :content %>
    <%= f.submit 'コメントする' %>
  <% end %>
  <div class='comments'>
    <% @comments.each do |comment| %>
      <p><%= comment.content %><%= comment.user.name %></p>
      <% if user_signed_in? && current_user.id == comment.user_id %>
        <%= link_to "編集する", edit_post_comment_path(comment.id), class: :comment__btn %>
        <%= link_to "削除する", post_comment_path(comment.id), method: :delete, class: :comment__btn %>
      <% end %>
    <% end %>
  </div>
</div>

<%= link_to "ホームへ戻る", root_path %>
